<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        xmlns:ViewModels="clr-namespace:WpfClient.ViewModels" x:Class="WpfClient.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="690">
    <Grid>
        <ComboBox x:Name="citiesList" Height="22" VerticalAlignment="Top" Margin="23,24,499,0" SelectionChanged="CitiesList_SelectionChanged"/>

        <ListView x:Name="weatherList" Margin="214,10,108,31">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding city}"  Width="100" Header="Город"/>
                    <GridViewColumn DisplayMemberBinding="{Binding value}" Width="100" Header="Температура"/>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
